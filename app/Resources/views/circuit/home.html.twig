{% extends 'agvoybase.html.twig' %}
{% block subheader %}
    {# jumbotron #}
        <div class="jumbotron" style="margin-top: 0%; margin-bottom: 0%; z-index:10;
        position: absolute; background: rgba(238, 238, 238, 0.6); margin-left: auto;
        margin-right: auto; left: 0; right: 0;">
            <div class="container text-center">
                <h1>Le client</h1>
                <p>Agence de voyage en ligne</p>
            </div>
        </div>

    {# carousel #}
    <div class="carousel slide" id="screenshot-carousel" data-ride="carousel"
    style="z-index:-1; position: absolute; margin-top: -10%;">
        <ol class="carousel-indicators">
            <li data-target="#screenshot-carousel" data-slide-to="0" class="active" style="margin-bottom:24%"></li>
            <li data-target="#screenshot-carousel" data-slide-to="1" style="margin-bottom:24%"></li>
            <li data-target="#screenshot-carousel" data-slide-to="2" style="margin-bottom:24%"></li>
            <li data-target="#screenshot-carousel" data-slide-to="3" style="margin-bottom:24%"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="images/paris.jpg" alt="Text of the image" style='height: auto; width: 100%; object-fit: contain'/>
                <div class="carousel-caption" style="margin-bottom:14%">
                    <h3><span style="font-weight:bold;">Découvrez</span></h3>
                    <p><span style="font-weight:bold;">Plusieurs villes à visiter</span></p>
                </div>
            </div>
            <div class="item">
                <img src="images/venice.jpg" alt="Text of the image" style='height: auto; width: 100%; object-fit: contain'/>
                <div class="carousel-caption" style="margin-bottom:14%">
                    <h3><span style="font-weight:bold;">Découvrez</span></h3>
                    <p><span style="font-weight:bold;">Plusieurs villes à visiter</span></p>
                </div>
            </div>
            <div class="item">
                <img src="images/prr.jpg" alt="Text of the image" style='height: auto; width: 100%; object-fit: contain'/>
                <div class="carousel-caption" style="margin-bottom:14%">
                    <h3><span style="font-weight:bold;">Découvrez</span></h3>
                    <p><span style="font-weight:bold;">Plusieurs villes à visiter</span></p>
                </div>
            </div>
            <div class="item">
                <img src="images/brr.jpg" alt="Text of the image" style='height: auto; width: 100%; object-fit: contain'/>
                <div class="carousel-caption" style="margin-bottom:14%">
                    <h3><span style="font-weight:bold;">Découvrez</span></h3>
                    <p><span style="font-weight:bold;">Plusieurs villes à visiter</span></p>
                </div>
            </div>
        </div>
        <a href="#screenshot-carousel" class="left carousel-control" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a href="#screenshot-carousel" class="right carousel-control" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
{% endblock %}


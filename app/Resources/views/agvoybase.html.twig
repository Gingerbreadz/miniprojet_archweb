{% extends 'base.html.twig' %}

{% block header %}
            <header>
                <div class="navbar-wrapper" style="z-index: 10; margin-top: 1%;margin-right: 7%; margin-left: 7%;">
                <div class="container">
                <div class="navbar navbar-inverse " id ="mynav-bar" role="navigation"
                style="border: 0;-webkit-box-shadow: 0 2px 10px rgba(0,0,0,.25);
                -moz-box-shadow: 0 2px 10px rgba(0,0,0,.25);box-shadow: 0 2px 10px rgba(0,0,0,.25);width: auto;">
                    <div class="container">
                        <div class="navbar-header">

                            <a class="navbar-brand" href="{{ path('page_accueil') }}">Agence de Voyage</a>

                            <button type="button" class="navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                {% block header_navigation_links %}
                                    <li><a href="{{ path('circuit_index') }}"> Nos offres</a></li>                                          
                                {% endblock %}
                            </ul>
                            <ul class="nav navbar-nav navbar-right" style="padding-right:1.5%;">
                                {% block header_navigation_links_right %}

                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><p class="navbar-text">Bonjour, {{ app.user }}</p></li>
                                        <li><a href="{{ path('admin_users_manage') }}">Gestion des utilisateurs</a></li>                                     
                                        <li><a href="{{ path('fos_user_security_logout') }}"> Logout</a></li>
                                    {% elseif is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <li><p class="navbar-text">Bonjour, {{ app.user }}</p></li>
                                        <li><a href="{{ path('fos_user_security_logout') }}"> Logout</a></li>
                                    {% else %}
                                        <li><a href="{{ path('fos_user_security_login') }}"> Login</a></li>
                                    {% endif %}

                                {% endblock %}
                            </ul>
                        </div>
                    </div>
                </div>
                </div>
                </div>
            {% block subheader %}{% endblock %}
            </header>
{% endblock %}
        
